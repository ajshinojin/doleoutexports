                    <input type="text" name="Phone" class="form-control" value="{{product.Phone}}">
                       
                </div>
                
    
        <div class="pb-5 pt-3 ali">
          
            <button type="submit" class="btn btn-primary "  onclick="return confirm('Thank you .Press OK for continue')">Send</button>
        </div>
</div>


</form>


