<div class="container ask">
<div class="ci"><span class="c">Your Cart Items</span> </div>
    <form action="/send" method="POST">
    <table class="table mt-5">

        <thead class="it">
            <tr>
                <th scope="col">Item</th>
                <th scope="col">Quantity and Name</th>
               
                
            </tr>
        </thead>


        <tbody class="pd">

            {{#each products}}
